	<script>
		function checkId() {
			let inputId=document.getElementById("id");
			let ck=document.getElementById("ck");
			let resultMsg=document.getElementById("idCheckResult");
			console.log(inputId.value);
			if(inputId.value!="") {
				fetch('http://localhost:8081/member/checkId?id=${inputId.value}')	
				.then(response =>response.json())
				.then(data=> {
					if(data) {
						resultMsg.innerText="이미 사용중인 아이디입니다.";
						resultMsg.style.color="purple"; 
					} else {
						resultMsg.innerText="사용가능한 아이디입니다.";
						resultMsg.style.color="skyblue";
					}
				})
				.catch(error=>{
					resultMsg.innerText="오류발생";
					resultMsg.style.color="red";
				});
			} else {
				alert("아이디 입력이 되어있지 않습니다.");
				inputId.focus();
			}
		}
		function validateForm() {
			let inputId
			let pw1=document.getElementById("pw1").value;
			let pw2=document.getElementById("pw2").value;
			let ck=document.getElementById("ck");
			let resultMsg=document.getElementById("idCheckResult");
			
			if(pw1.value!==pw2.value) {
				resultMsg.innerText="비밀번호와 비밀번호 확인이 일치하지 않습니다.";
				resultMgs.style.color="red";
				pw1.focus();
			} 
			if(ck.value !=="true") {
				resultMsg.innerText="아이디 중복체크를 진행해야 가입이 가능합니다.";
				resultMsg.style.color="purple";
				inputId.focus();
				return false;
			}
			return true;
		}
	</script>
